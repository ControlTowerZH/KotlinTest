<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainListActivity">

   <com.anthonyfdev.dropdownview.DropDownView
       android:id="@+id/drop_down_view"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:containerBackgroundColor="@color/colorPrimary"
       app:overlayColor="@color/white"
       tools:layout_height="?android:attr/actionBarSize"/>


   <FrameLayout
       android:id="@+id/frame_container"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"/>

</LinearLayout>